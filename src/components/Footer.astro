---
const explorarLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/arquitectura', label: 'Arquitectura' },
  { href: '/virgen-de-los-angeles', label: 'Virgen de los Ángeles' },
  { href: '/peregrinacion', label: 'Peregrinación' },
  { href: '/galeria', label: 'Galería Multimedia' },
];

const infoLinks = [
  { href: '/horarios', label: 'Horarios' },
  { href: '/faq', label: 'Preguntas frecuentes' },
  { href: '/ubicacion', label: 'Cómo llegar' },
];
---

<footer class="bg-white border-t border-gray-200" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Columna 1: Nombre y descripción -->
      <div class="col-span-1">
        <h3 class="text-primary font-bold text-lg mb-3">Basílica de Los Ángeles</h3>
        <p class="text-neutral-gray text-sm leading-relaxed">
          Sitio web dedicado a la Basílica de Nuestra Señora de los Ángeles, 
          santuario nacional de Costa Rica ubicado en Cartago.
        </p>
      </div>

      <!-- Columna 2: Explorar -->
      <nav class="col-span-1" aria-label="Enlaces de exploración">
        <h4 class="text-primary font-semibold text-base mb-3">Explorar</h4>
        <ul class="space-y-2">
          {explorarLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-gray text-sm hover:text-primary transition-colors duration-200 focus-visible:ring-2 focus-visible:ring-accent-gold focus-visible:outline-none rounded"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Columna 3: Información -->
      <nav class="col-span-1" aria-label="Enlaces de información">
        <h4 class="text-primary font-semibold text-base mb-3">Información</h4>
        <ul class="space-y-2">
          {infoLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-neutral-gray text-sm hover:text-primary transition-colors duration-200 focus-visible:ring-2 focus-visible:ring-accent-gold focus-visible:outline-none rounded"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Columna 4: Contacto -->
      <div class="col-span-1">
        <h4 class="text-primary font-semibold text-base mb-3">Contacto</h4>
        <ul class="space-y-2 text-neutral-gray text-sm">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>(506) 2551-0465</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@basilicadelosangeles.org" class="hover:text-primary transition-colors duration-200 focus-visible:ring-2 focus-visible:ring-accent-gold focus-visible:outline-none rounded">
              info@basilicadelosangeles.org
            </a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Cartago, Costa Rica</span>
          </li>
        </ul>

        <!-- Redes Sociales -->
        <div class="flex items-center gap-4 mt-4">
          <a href="#" class="text-neutral-gray hover:text-primary transition-colors duration-200 focus-visible:ring-2 focus-visible:ring-accent-gold focus-visible:outline-none rounded-full p-1" aria-label="Facebook">
