---
const navLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/historia', label: 'Historia' },
  { href: '/arquitectura', label: 'Arquitectura' },
  { href: '/virgen-de-los-angeles', label: 'Virgen de los Ángeles' },
  { href: '/peregrinacion', label: 'Peregrinación' },
  { href: '/horarios', label: 'Horarios y Servicios' },
  { href: '/galeria', label: 'Galería Multimedia' },
  { href: '/noticias', label: 'Noticias y Eventos' },
  { href: '/contacto', label: 'Contacto' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-primary shadow-lg">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-white font-bold text-xl tracking-wide">
          Basílica Ángeles
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden xl:flex items-center space-x-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-white/90 hover:text-white hover:bg-primary-dark px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Right Side: Language & Donate -->
      <div class="hidden xl:flex items-center space-x-4">
        <!-- Language Selector -->
        <div class="flex items-center space-x-2 text-white/80 text-sm">
          <button class="hover:text-white font-semibold text-white">ES</button>
          <span class="text-white/50">|</span>
          <button class="hover:text-white">EN</button>
        </div>

        <!-- Donate Button -->
        <a
          href="/donar"
          class="bg-accent-gold hover:bg-accent-gold/90 text-white px-5 py-2 rounded-full font-semibold text-sm transition-colors duration-200 shadow-md"
        >
          Donar
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="xl:hidden flex items-center">
        <button
          id="mobile-menu-button"
          type="button"
          class="text-white hover:text-white/80 focus:outline-none focus:ring-2 focus:ring-white/50 rounded-md p-2"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú principal</span>
          <!-- Hamburger Icon -->
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden xl:hidden pb-4">
      <div class="flex flex-col space-y-1 pt-2 border-t border-white/20">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-white/90 hover:text-white hover:bg-primary-dark px-3 py-2 rounded-md text-base font-medium transition-colors duration-200"
          >
            {link.label}
          </a>
        ))}
        
        <!-- Mobile Language & Donate -->
        <div class="flex items-center justify-between pt-4 mt-2 border-t border-white/20">
          <div class="flex items-center space-x-2 text-white/80 text-sm">
            <button class="hover:text-white font-semibold text-white">ES</button>
            <span class="text-white/50">|</span>
            <button class="hover:text-white">EN</button>
          </div>
          <a
            href="/donar"
            class="bg-accent-gold hover:bg-accent-gold/90 text-white px-5 py-2 rounded-full font-semibold text-sm transition-colors duration-200"
          >
            Donar
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer to prevent content from going under fixed navbar -->
<div class="h-16"></div>
