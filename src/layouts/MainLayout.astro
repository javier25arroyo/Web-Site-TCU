---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#1F2A44" />
    <meta name="color-scheme" content="light" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Sitio web oficial de la Basílica de Nuestra Señora de los Ángeles, Cartago, Costa Rica." />
    <title>{title} | Basílica de Los Ángeles</title>
    <ViewTransitions />
  </head>
  <body class="bg-background text-primary font-sans min-h-screen flex flex-col antialiased">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-primary focus:text-white focus:px-4 focus:py-2 focus:rounded-lg">
      Saltar al contenido principal
    </a>
    <Navbar transition:persist />
    <main id="main-content" class="flex-grow" transition:animate="fade">
      <slot />
    </main>
    <Footer transition:persist />
  </body>
</html>
