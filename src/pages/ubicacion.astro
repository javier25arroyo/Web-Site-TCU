---
import MainLayout from '../layouts/MainLayout.astro';

const contact = {
  address: 'Avenida de la Basílica, #825, Ciudad de la Paz, CP 30201, Costa Rica',
  phone: '+506 2556-1234',
  email: 'info@basilica-angeles.org'
};

const howTo = [
  {
    title: 'En Coche',
    description:
      'Cruza hacia la Basílica. Usa la Ruta 2 o Avenida Central. Sigue la señalización local y estaciona en las zonas designadas cercanas a la Basílica.'
  },
  {
    title: 'Transporte Público',
    description:
      'Existen múltiples rutas de autobús hacia Cartago, con salidas desde San José y otras ciudades. Consulta los horarios vigentes y solicita la parada cercana a la Basílica. El tren a Cartago es otra opción accesible.'
  },
  {
    title: 'A Pie',
    description:
      'Para quienes peregrinan a pie, recomendamos planificar descansos, llevar hidratación y ropa cómoda. Sigue las indicaciones y prioriza caminar en grupo para mayor seguridad.'
  }
];

const pointsOfInterest = [
  {
    title: 'Parque Central de Cartago',
    description: 'Un espacio de encuentro y descanso a pocas cuadras de la Basílica.',
    img: '/assets/parque-cartago.jpg'
  },
  {
    title: 'Ruinas de Santiago Apóstol',
    description: 'Monumento histórico en el centro de Cartago, con arquitectura de gran atractivo.',
    img: '/assets/ruinas-santiago.jpg'
  },
  {
    title: 'Mercado Municipal de Cartago',
    description: 'Gastronomía local y productos frescos; ambiente popular y acogedor.',
    img: '/assets/mercado-cartago.jpg'
  }
];
---

<MainLayout 
  title="Ubicación y Cómo Llegar" 
  description="Encuentre la ubicación exacta de la Basílica de Los Ángeles en Cartago, Costa Rica. Instrucciones para llegar en coche, autobús o tren."
>
  <main class="bg-white">
    <section class="max-w-4xl mx-auto px-4 pt-16 pb-10 text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-primary">Ubicación y Cómo Llegar</h1>
      <p class="mt-3 text-sm text-slate-600">
        Encuentra la Basílica de los Ángeles y planifica tu visita con nuestra guía detallada de transporte.
      </p>
    </section>

    <!-- Mapa principal -->
    <section class="max-w-5xl mx-auto px-4 pb-12">
      <div class="text-center mb-4">
        <h2 class="text-lg font-semibold text-primary">Nuestro Hogar Espiritual</h2>
      </div>
      <div class="overflow-hidden rounded-2xl shadow-md bg-slate-100">
        <div class="relative aspect-video">
          <img
            src="/assets/ubicacion-mapa.jpg"
            alt="Mapa de ubicación de la Basílica de los Ángeles"
            class="w-full h-full object-cover"
          />
          <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-3">
            <a
              href="https://maps.google.com"
              class="inline-flex items-center rounded-full bg-primary px-4 py-2 text-xs font-semibold text-white shadow hover:bg-primary-dark"
              target="_blank"
              rel="noreferrer"
            >
              Ver en Google Maps
            </a>
            <a
              href="#contacto"
              class="inline-flex items-center rounded-full bg-white px-4 py-2 text-xs font-semibold text-primary border border-primary hover:bg-slate-50"
            >
              Obtener indicaciones
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Información de contacto -->
    <section id="contacto" class="max-w-5xl mx-auto px-4 pb-12">
      <div class="rounded-2xl bg-slate-50 border border-slate-100 p-8 text-center shadow-sm">
        <h3 class="text-lg font-semibold text-primary">Información de Contacto</h3>
        <p class="mt-3 text-sm text-slate-700">{contact.address}</p>
        <div class="mt-4 flex flex-col gap-2 items-center text-sm text-slate-700">
          <div class="flex items-center gap-2">
            <span class="font-semibold">Tel:</span> <span>{contact.phone}</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-semibold">Correo:</span>
            <a href={`mailto:${contact.email}`} class="text-primary hover:underline">{contact.email}</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Cómo llegar -->
    <section class="max-w-6xl mx-auto px-4 pb-12">
      <div class="text-center mb-6">
        <h3 class="text-xl font-semibold text-primary">Cómo Llegar a la Basílica</h3>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {howTo.map((item) => (
          <article class="rounded-2xl border border-slate-100 bg-white shadow-sm p-6 text-center">
            <h4 class="text-sm font-semibold text-primary">{item.title}</h4>
            <p class="mt-3 text-sm text-slate-700 leading-relaxed">{item.description}</p>
          </article>
        ))}
      </div>
    </section>

    <!-- Puntos de interés -->
    <section class="max-w-6xl mx-auto px-4 pb-16">
      <div class="text-center mb-6">
        <h3 class="text-xl font-semibold text-primary">Puntos de Interés Cercanos</h3>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        {pointsOfInterest.map((point) => (
          <article class="rounded-2xl border border-slate-100 bg-white shadow-sm overflow-hidden">
            <div class="aspect-video overflow-hidden">
              <img src={point.img} alt={point.title} class="w-full h-full object-cover" />
            </div>
            <div class="p-5 space-y-2">
              <h4 class="text-sm font-semibold text-primary">{point.title}</h4>
              <p class="text-sm text-slate-700 leading-relaxed">{point.description}</p>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</MainLayout>
