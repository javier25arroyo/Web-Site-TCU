---
import MainLayout from '../layouts/MainLayout.astro';
import SiteIcon from '../components/SiteIcon.astro';

type Step = {
	number: number;
	title: string;
	icon: string;
	bullets: { label: string; text: string }[];
};

const steps: Step[] = [
	{
		number: 1,
		title: 'Preparación Espiritual',
		icon: 'ph:hands-praying-duotone',
		bullets: [
			{ label: 'Oración:', text: 'Dedica tiempo a la oración personal y comunitaria antes del viaje.' },
			{ label: 'Reflexión:', text: 'Prepara el corazón con lecturas y meditación sobre la intención de la peregrinación.' },
			{ label: 'Participación:', text: 'Organiza momentos de encuentro litúrgico con tu grupo o parroquia.' }
		]
	},
	{
		number: 2,
		title: 'Aspectos Prácticos del Viaje',
		icon: 'ph:backpack-duotone',
		bullets: [
			{ label: 'Transporte:', text: 'Planifica rutas, horarios y opciones de transporte para llegar puntuales.' },
			{ label: 'Alojamiento:', text: 'Reserva con antelación si vas a quedarte en la ciudad o cerca de la Basílica.' },
			{ label: 'Documentos:', text: 'Lleva identificación, datos de contacto y cualquier permiso necesario.' }
		]
	},
	{
		number: 3,
		title: 'Experiencia en la Basílica',
		icon: 'ph:church-duotone',
		bullets: [
			{ label: 'Llegada:', text: 'Consulta horarios de misa y momentos de mayor afluencia para organizar tu visita.' },
			{ label: 'Participación:', text: 'Participa en la liturgia con respeto y según las indicaciones del recinto.' },
			{ label: 'Visitas:', text: 'Aprovecha las visitas guiadas para conocer la historia y patrimonio de la Basílica.' }
		]
	},
	{
		number: 4,
		title: 'Después de la Peregrinación',
		icon: 'ph:heart-duotone',
		bullets: [
			{ label: 'Acción de gracias:', text: 'Reserva un tiempo para agradecer por la experiencia vivida.' },
			{ label: 'Compartir:', text: 'Comparte tu testimonio con la comunidad y anima a otros a peregrinar.' },
			{ label: 'Continuidad:', text: 'Mantén prácticas espirituales que fortalecieron durante la peregrinación.' }
		]
	}
];

type Resource = {
	title: string;
	description: string;
	action: string;
	href: string;
	icon: string;
};

const resources: Resource[] = [
	{
		title: 'Preguntas Frecuentes',
		description: 'Respuestas a las dudas más comunes sobre fechas, horarios y recomendaciones para peregrinos.',
		action: 'Ver FAQ',
		href: '#faq',
		icon: 'ph:chat-circle-dots-duotone'
	},
	{
		title: 'Ubicación y Rutas',
		description: 'Mapas, rutas recomendadas y opciones de acceso desde las principales ciudades cercanas.',
		action: 'Ver Rutas',
		href: '#rutas',
		icon: 'ph:map-pin-fill'
	},
	{
		title: 'Contacto Directo',
		description: 'Información de contacto para coordinar grupos, solicitar permisos o consultas especiales.',
		action: 'Contactar',
		href: '#contacto',
		icon: 'ph:envelope-simple-open-duotone'
	}
];

type Testimony = { quote: string; name: string; detail: string };

const testimonies: Testimony[] = [
	{
		quote: 'La peregrinación transformó mi forma de orar: encontré paz y comunidad en cada paso.',
		name: 'María López',
		detail: 'Catequista y peregrina, 42 años'
	},
	{
		quote: 'Fue una experiencia que fortaleció a nuestra parroquia; volveremos cada año.',
		name: 'Grupo San José',
		detail: 'Parroquia San José, Heredia'
	}
];
---

<MainLayout 
	title="Peregrinación | Basílica de Los Ángeles" 
	description="Guía completa para peregrinos: preparación espiritual, rutas, consejos prácticos y recursos para su visita a la Basílica de Los Ángeles."
>
	<main class="pb-20">
		<!-- Hero -->
		<section class="max-w-3xl mx-auto px-4 pt-20 pb-16 text-center">
			<h1 class="text-4xl md:text-5xl font-semibold leading-tight">
				Planifica Tu Peregrinación<br />a la Basílica de Los Ángeles
			</h1>
			<p class="mt-6 text-slate-600 text-base md:text-lg leading-relaxed">
				Prepárate para una experiencia de fe y comunidad. Esta guía te ayudará a organizar cada etapa
				de tu peregrinación: desde la preparación espiritual hasta los detalles prácticos del viaje,
				para que vivas la visita con tranquilidad y sentido.
			</p>

			<div class="mt-8 flex items-center justify-center gap-4">
				<a class="inline-flex items-center justify-center rounded-full bg-primary px-6 py-2.5 text-sm font-semibold text-white hover:bg-primaryDark" href="#" role="button">
					Descargar Guía de Peregrinación
				</a>
				<a class="inline-flex items-center justify-center rounded-full border border-primary bg-white px-6 py-2.5 text-sm font-semibold text-primary hover:bg-sky-50" href="#contacto" role="button">
					Contactar por Dudas
				</a>
			</div>
		</section>

		<!-- Nuestra Guía Paso a Paso -->
		<section class="pt-8">
			<h2 class="text-2xl font-semibold text-center">Nuestra Guía Paso a Paso</h2>

			<div class="max-w-4xl mx-auto px-4 pb-16 mt-8">
				<div class="space-y-10">
					{steps.map((step) => (
						<article class="flex items-start gap-6">
							<div class="flex-shrink-0">
								<SiteIcon variant="circle-gold" name={step.icon} sizeClass="w-9 h-9" />
							</div>
							<div class="flex-1">
								<h3 class="text-lg md:text-xl font-semibold">{step.number}. {step.title}</h3>
								<ul class="mt-3 space-y-2 list-none">
									{step.bullets.map((b) => (
										<li class="text-slate-700 text-sm">
											<span class="font-semibold">{b.label}</span> {b.text}
										</li>
									))}
								</ul>
							</div>
						</article>
					))}
				</div>
			</div>
		</section>

		<!-- Recursos Adicionales -->
		<section class="border-y border-slate-100 bg-white py-12">
			<h2 class="text-2xl font-semibold text-center">Recursos Adicionales para Peregrinos</h2>
			<p class="max-w-2xl mx-auto px-4 mt-4 text-slate-600 text-center">Recopilamos recursos útiles para planificar antes y acompañar tu peregrinación durante el viaje.</p>

			<div class="max-w-6xl mx-auto px-4 mt-8 grid gap-6 md:grid-cols-3">
				{resources.map((r) => (
					<article class="bg-slate-50 rounded-2xl border border-slate-100 shadow-sm p-6 flex flex-col">
						<div class="flex items-center gap-4">
							<SiteIcon variant="circle-blue" name={r.icon} />
							<h3 class="text-sm font-semibold">{r.title}</h3>
						</div>
						<p class="mt-4 text-slate-700 text-sm leading-relaxed">{r.description}</p>
						<a class="mt-6 inline-flex items-center self-start rounded-full bg-primary hover:bg-primaryDark text-white text-xs px-4 py-2" href={r.href}>{r.action}</a>
					</article>
				))}
			</div>
		</section>

		<!-- Testimonios -->
		<section class="pt-12">
			<h2 class="text-2xl font-semibold text-center">Historias de Fe: Testimonios de Peregrinos</h2>
			<p class="max-w-2xl mx-auto px-4 mt-4 text-slate-600 text-center">Experiencias y testimonios de quienes han vivido la peregrinación a la Basílica.</p>

			<div class="max-w-6xl mx-auto px-4 mt-8 grid gap-6 md:grid-cols-2">
				{testimonies.map((t) => (
					<article class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
						<p class="text-slate-700 text-sm leading-relaxed">
							“{t.quote}”
						</p>
						<div class="mt-4">
							<div class="text-xs font-semibold text-primary">{t.name}</div>
							<div class="text-[11px] text-neutral-gray">{t.detail}</div>
						</div>
					</article>
				))}
			</div>
		</section>
	</main>
</MainLayout>

